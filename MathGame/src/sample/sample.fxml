
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20">

    <Label fx:id="scoreCounter" GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <Label fx:id="questionField" GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>



    <TextField fx:id="userInputField" GridPane.columnIndex="0" GridPane.rowIndex="2" >
    </TextField>

    <Label fx:id="resultField" GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>

    <Button fx:id="newQuestionButton" GridPane.columnIndex="1" GridPane.rowIndex="4" text="New Question"
            onMouseClicked="#handleNewQuestionButton">
    </Button>

    <Button fx:id="guessButton" GridPane.columnIndex="0" GridPane.rowIndex="4" text="Guess"
        onMouseClicked="#handleGuessButton">
    </Button>

    <Button fx:id="skipButton" GridPane.columnIndex="2" GridPane.rowIndex="4" text="Skip"
        onMouseClicked="#handleSkipButton">
    </Button>




</GridPane>